datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  createdAt      DateTime        @default(now())
  description    String?
  id             String          @id @default(cuid())
  name           String?
  projectDetails ProjectDetail[]
  updatedAt      DateTime        @updatedAt
  url            String?
}

model ProjectDetail {
  createdAt DateTime @default(now())
  detail    String?
  id        String   @id @default(cuid())
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?
  updatedAt DateTime @updatedAt
}

model Search {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  query     String?
  updatedAt DateTime @updatedAt
}
